{
    "name": "neurocode-frontend",
    "version": "0.1.0",
    "description": "NeuroCode Interactive Code Visualization Frontend",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
