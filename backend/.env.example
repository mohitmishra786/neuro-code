# NeuroCode Environment Configuration
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
LOG_FORMAT=console  # console or json

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neurocode

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Parser Settings
PARSER_MAX_FILE_SIZE=10485760  # 10MB
PARSER_TIMEOUT=60

# File Watcher
WATCHER_DEBOUNCE_DELAY_MS=500

